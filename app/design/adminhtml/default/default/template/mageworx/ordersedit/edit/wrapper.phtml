        });
    <?php } else { ?>
        Event.observe(window, 'load',  function() {
            var elements = document.querySelectorAll('.entry-edit .tools');

            for (var elem in elements) {

                if (!elements.hasOwnProperty(elem)) {
                    continue;
                }

                var currEl;
                currEl = elements[elem];
                if (currEl instanceof Element) {
                    currEl.hide();
                }
            }

            return this;
        });
